#!/bin/bash

# Directory where JSON files are stored
DATA_DIR="pokemon_data"
OUTPUT_FILE="pokemon_report.csv"

# Create CSV header
echo "Name,Height (m),Weight (kg)" > "$OUTPUT_FILE"

# Loop through JSON files and extract data
for file in "$DATA_DIR"/*.json; do
    name=$(jq -r '.name' "$file" | sed 's/.*/\u&/') # sed to capitalize first letter
    height=$(jq -r '.height' "$file")
    weight=$(jq -r '.weight' "$file")

    # Convert to meters and kg
    height_m=$(awk "BEGIN {print $height / 10}")
    weight_kg=$(awk "BEGIN {print $weight / 10}")

    echo "$name,$height_m,$weight_kg" >> "$OUTPUT_FILE"
done

echo "CSV Report generated at: $OUTPUT_FILE"
echo ""

# Display the CSV file
cat "$OUTPUT_FILE"
echo ""

# Calculate averages using awk
awk -F, 'NR>1 {total_h+=$2; total_w+=$3; count++}
END {
    avg_h = total_h/count;
    avg_w = total_w/count;
    printf "Average Height: %.2f m\nAverage Weight: %.2f kg\n", avg_h, avg_w
}' "$OUTPUT_FILE"
